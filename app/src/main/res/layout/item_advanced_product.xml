<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="263dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_product1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtProductId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#C1F0B4"
                android:text="TextView"
                android:textColor="#2196F3"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#52F1F436"
                android:text="TextView"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtProductQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#52F4B836"
                android:text="TextView"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtProductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#52F44C36"
                android:text="TextView"
                android:textColor="#0B0B0A"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#5236C8F4"
                app:srcCompat="@mipmap/ic_cart" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

